<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="HealthMaui.Pages.AppointmentsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <VerticalStackLayout Padding="16" Spacing="8">
    <Button Text="New Appointment" Clicked="AddClicked"/>
    <Label Text="(Mon–Fri 08:00–17:00; no physician double-booking)" FontAttributes="Italic"/>
    <CollectionView x:Name="List">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <SwipeView>
            <SwipeView.RightItems>
              <SwipeItems>
                <SwipeItem Text="Delete" BackgroundColor="Tomato" Invoked="DeleteInvoked"/>
              </SwipeItems>
            </SwipeView.RightItems>
            <Grid Padding="8">
              <Label Text="{Binding Display}" />
            </Grid>
          </SwipeView>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </VerticalStackLayout>
</ContentPage>
