<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="HealthMaui.Pages.PatientEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="8">
      <Entry x:Name="FirstName" Placeholder="First name" />
      <Entry x:Name="LastName" Placeholder="Last name" />
      <Entry x:Name="Address" Placeholder="Address" />
      <DatePicker x:Name="BirthDate" />
  <Picker x:Name="RacePicker" Title="Race" />
  <Picker x:Name="GenderPicker" Title="Gender" />

      <Label Text="Medical Notes" FontAttributes="Bold" />
      <Entry x:Name="Dx" Placeholder="Diagnoses" />
      <Entry x:Name="Rx" Placeholder="Prescriptions" />
      <Editor x:Name="NoteText" Placeholder="Free text (optional)" AutoSize="TextChanges" />
      <Button Text="Add Note" Clicked="AddNoteClicked" />

      <Label Text="Existing Notes" FontAttributes="Bold" />
      <CollectionView x:Name="NotesList">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <VerticalStackLayout Padding="6" Spacing="2">
              <Label FontAttributes="Bold" Text="{Binding Diagnoses}" />
              <Label Text="{Binding Prescriptions}" />
              <Label FontAttributes="Italic" Text="{Binding CreatedDisplay}" />
              <Label Text="{Binding FreeText}" LineBreakMode="WordWrap" />
            </VerticalStackLayout>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>

      <HorizontalStackLayout Spacing="10">
        <Button Text="Save" Clicked="SaveClicked" />
        <Button Text="Delete" BackgroundColor="IndianRed" Clicked="DeleteClicked" />
      </HorizontalStackLayout>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
