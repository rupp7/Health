<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="HealthMaui.Pages.PhysicianEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="8">
      <Entry x:Name="FirstName" Placeholder="First name"/>
      <Entry x:Name="LastName" Placeholder="Last name"/>
      <Entry x:Name="LicenseNumber" Placeholder="License #"/>
      <DatePicker x:Name="GraduationDate" />
      <Entry x:Name="SpecializationsCsv" Placeholder="Specializations (comma-separated)"/>
      <HorizontalStackLayout Spacing="8">
        <Button Text="Save" Clicked="SaveClicked" HorizontalOptions="StartAndExpand" />
        <Button Text="Delete" Clicked="DeleteClicked" BackgroundColor="IndianRed" TextColor="White" HorizontalOptions="End" />
      </HorizontalStackLayout>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
